<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_root_view"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="#E9F8FF">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:visibility="visible"
            android:id="@+id/envelope_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="40dp">

        <ImageView
                android:layout_width="287dp"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/envelope_close"
                android:scaleType="fitCenter"/>

        <ImageView
            android:id="@+id/envelope_open_button"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:scaleType="fitCenter"
            android:src="@drawable/letter_open_button"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.498"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.499" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/envelope_open"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="40dp"
        android:visibility="gone"
        tools:layout_editor_absoluteX="40dp"
        tools:layout_editor_absoluteY="40dp">

        <TextView
            android:id="@+id/text"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_marginHorizontal="65dp"
            android:layout_marginTop="20dp"
            android:autoSizeMinTextSize="1px"
            android:autoSizeTextType="uniform"
            android:elevation="1dp"
            android:fontFamily="@font/dancing_script"
            android:gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            app:layout_constraintTop_toTopOf="@id/open_letter_image" />

        <ImageView
            android:id="@+id/open_letter_image"
            android:layout_width="287dp"
            android:layout_height="397dp"
            android:scaleType="fitCenter"
            android:src="@drawable/envelope_open"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>