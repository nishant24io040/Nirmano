<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/page_root_view"
        tools:context="com.mental.mentalwellness.developer.nirmano.mentalwellness.positiveDirectPage"
        android:background="#A3C4E7">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constrainedHeight="true"
        android:scaleType="fitEnd"
        android:src="@drawable/clouds_and_birds"/>


    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:gravity="center_horizontal"
                      android:layout_marginTop="92dp"
                      android:layout_marginHorizontal="20dp"
                      android:orientation="vertical">

        <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Want to store your happy moment?"
                android:textSize="18sp"
                android:textAlignment="center"
                android:fontFamily="@font/poppins"
                android:textColor="#000000"
                android:textStyle="bold"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/journal_redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="15dp"
                android:backgroundTint="#ffffff"
                android:minWidth="230dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:text="Yes, Open My Journal"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="@font/arial"
                android:textSize="14sp"/>

        <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
                android:id="@+id/home_redirect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="#ffffff"
                android:minWidth="230dp"
                android:outlineSpotShadowColor="@android:color/transparent"
                android:text="No, i am good to go"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:fontFamily="@font/arial"
                android:textSize="14sp"/>

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>