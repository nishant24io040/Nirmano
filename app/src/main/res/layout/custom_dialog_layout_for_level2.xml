<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialogbg">

    <Button
        android:id="@+id/knowmore"
        android:layout_width="110dp"
        android:layout_height="31dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/nextbuttonbg"
        android:fontFamily="@font/poppins"
        android:text="Know more"
        android:textColor="#DDDDDD"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btncontinue"
        app:layout_constraintStart_toStartOf="@+id/btncontinue"
        app:layout_constraintTop_toBottomOf="@+id/btncontinue"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:id="@+id/feeling"
        android:layout_width="0dp"
        android:layout_height="45dp"
        android:background="#FFF4DA "
        android:gravity="center"
        android:text="SAD"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/firstdiscription"
        android:layout_width="336dp"
        android:layout_height="108dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:text="An emotional pain associated with, or characterized by, feelings of disadvantage, loss, despair, grief, helplessness, disappointment and sorrow"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.213"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/feeling" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:text="COMMON SYMPTOMS"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/secbody"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/secbody"
        android:layout_width="342dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/poppins_medium"
        android:gravity="center_vertical"
        android:text="@string/text_with_bullet"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.231"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstdiscription" />

    <Button
        android:id="@+id/btncontinue"
        android:layout_width="230dp"
        android:layout_height="30dp"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttonbg"
        android:text="CONTINUE WITH SAD"
        android:textColor="#2679CF"
        app:layout_constraintBottom_toTopOf="@+id/knowmore"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.51"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/secbody" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</androidx.constraintlayout.widget.ConstraintLayout>