<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:id="@+id/page_root_view"
    android:layout_height="match_parent"
    tools:context="com.nirman.mentalwellness.developer.nirmano.mentalwellness.jogg">

    <ScrollView android:layout_width="match_parent" android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:background="#99c4f1"
                android:layout_width="match_parent"
                android:layout_height="250dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constrainedHeight="true"
                    android:contentDescription="header_background"
                    android:scaleType="centerCrop"
                    android:src="@drawable/header_bibo"/>

                <ImageButton
                    android:id="@+id/lemon_back_button"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/arrow_left"
                    app:tint="#3B87D6"
                    android:scaleType="fitXY"
                    android:background="@android:color/transparent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="50dp"
                    android:layout_marginStart="25dp"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_margin="24dp">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jogg/walk"
                    android:textColor="#2679CF"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="Step to follow:"
                    android:textColor="#004082"
                    android:fontFamily="@font/poppins"
                    android:textSize="14sp"/>

                <ImageView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/underline_gradient"
                    android:scaleType="fitXY"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/para"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical activity releases endorphins which make you happy. If you feel your anger escalating, go for a walk or a jog. Spend some time doing physical activities you enjoy"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"
                        android:layout_marginBottom="5dp"/>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/bullet1_LL"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bullet1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Wear your favorite footwear"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/bullet2_LL"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bullet2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Visit the garden or playground "
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                    </LinearLayout>

                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:id="@+id/bullet3_LL"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bullet3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Have 5 mins of walking or jogging"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/bullet4_LL"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bullet4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Have 5 mins of walking or jogging"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                    </LinearLayout>
                    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                        android:visibility="gone"
                        android:id="@+id/bullet5_LL"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="●"
                            android:textColor="#000000"
                            android:layout_marginHorizontal="5dp"
                            android:textSize="12sp"/>

                        <TextView
                            android:id="@+id/bullet5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Have 5 mins of walking or jogging"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins"
                            android:textSize="14sp"/>

                    </LinearLayout>


                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="How it can help:"
                    android:fontFamily="@font/poppins"
                    android:textColor="#004082"
                    android:textSize="14sp"/>

                <ImageView android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/underline_gradient"
                    android:scaleType="fitXY"/>

                <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/outcomes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Physical exercise decreases the symptoms of anger
 give positive energy and at the same time promotes relaxation"
                        android:textColor="#000000"
                        android:fontFamily="@font/poppins"
                        android:textSize="14sp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>



</androidx.constraintlayout.widget.ConstraintLayout>