<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".EditMemory">

    <TextView
        android:id="@+id/textView30"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Dear Diary, "
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="@+id/imgselect"
        app:layout_constraintStart_toStartOf="@+id/imgselect"
        app:layout_constraintTop_toBottomOf="@+id/imgselect" />

    <EditText
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="bottom"
        android:text="MY LUCKY DAY"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/imgselect"
        app:layout_constraintStart_toStartOf="@+id/datepickup"
        app:layout_constraintTop_toBottomOf="@+id/datepickup" />

    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/arrow_left"
        android:drawablePadding="20dp"
        android:fontFamily="@font/dancing_script"
        android:gravity="center"
        android:text="Memory Box"
        android:textColor="#3B87D6"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/datepickup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:drawableEnd="@drawable/ic_calendar"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="bottom"
        android:text="TextView"
        android:textColor="#000000"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/back"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/back"
        app:layout_constraintTop_toBottomOf="@+id/back" />

    <ImageView
        android:id="@+id/imgselect"
        android:layout_width="316dp"
        android:layout_height="194dp"
        android:layout_marginTop="14dp"
        android:scaleType="fitCenter"
        android:src="@drawable/joyfulbg2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/btnimg"
        android:layout_width="132dp"
        android:layout_height="30dp"
        android:background="@drawable/bluebordorandwhite"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="@+id/imgselect"
        app:layout_constraintEnd_toEndOf="@+id/imgselect"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="@+id/imgselect"
        app:layout_constraintTop_toTopOf="@+id/imgselect">

        <TextView
            android:id="@+id/datepickup3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/addphoto"
            android:drawablePadding="10dp"
            android:fontFamily="@font/poppins"
            android:gravity="bottom"
            android:text="Add Image"
            android:textColor="#2A7BCF"
            android:textSize="13sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <EditText
        android:id="@+id/discr"
        android:layout_width="318dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="25dp"
        android:background="@color/white"
        android:fontFamily="@font/poppins"
        android:gravity="top"
        android:hint="(Describe Your Memory)"
        android:maxHeight="250dp"
        android:paddingStart="6dp"
        android:paddingEnd="6dp"
        android:paddingBottom="16dp"
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintEnd_toEndOf="@+id/imgselect"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/imgselect"
        app:layout_constraintTop_toBottomOf="@+id/textView30"
        app:layout_constraintVertical_bias="0.050000012" />

    <Button
        android:id="@+id/save"
        android:layout_width="60dp"
        android:layout_height="35dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/nextbuttonbg"
        android:fontFamily="@font/poppins"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/imgselect" />

</androidx.constraintlayout.widget.ConstraintLayout>