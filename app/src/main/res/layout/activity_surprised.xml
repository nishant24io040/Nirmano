<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F9F3FE"
    tools:context=".Surprised">

    <ImageView
        android:id="@+id/imageView20"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/positivebg" />

    <androidx.cardview.widget.CardView
        android:id="@+id/surprise"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginTop="53dp"
        android:background="@drawable/lovedbg"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toStartOf="@+id/amazed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/backd3">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/surpriseemotion" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="12dp"
            android:text="Surprise"
            android:textColor="#000000" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/stunning"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/lovedbg"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toEndOf="@+id/touched"
        app:layout_constraintStart_toStartOf="@+id/overcome"
        app:layout_constraintTop_toBottomOf="@+id/overcome">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/stunning" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="12dp"
            android:text="Stunning"
            android:textColor="#000000" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/overcome"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/lovedbg"
        app:cardCornerRadius="13dp"
        app:layout_constraintEnd_toStartOf="@+id/touched"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/surprise">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/overcome" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="12dp"
            android:text="Overcome"
            android:textColor="#000000" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/touched"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:background="@drawable/lovedbg"
        app:cardCornerRadius="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/overcome"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/overcome"
        app:layout_constraintTop_toTopOf="@+id/overcome">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/touched" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="12dp"
            android:shadowColor="#000000"
            android:text="Touched"
            android:textColor="#000000" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/amazed"
        android:layout_width="141dp"
        android:layout_height="141dp"
        android:background="@drawable/lovedbg"
        app:cardCornerRadius="13dp"
        app:layout_constraintBottom_toBottomOf="@+id/surprise"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/surprise"
        app:layout_constraintTop_toTopOf="@+id/surprise">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:src="@drawable/amsed" />

        <TextView
            android:id="@+id/textView21"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="13dp"
            android:fontFamily="@font/poppins_medium"
            android:paddingStart="12dp"
            android:shadowColor="#000000"
            android:text="Amazed"
            android:textColor="#000000" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/backd3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:drawableStart="@drawable/baseline_arrow_back_24"
        android:drawablePadding="20dp"
        android:fontFamily="@font/dancing_script"
        android:gravity="center"
        android:text="Choose your perfect mood."
        android:textColor="#000000"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.149"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>