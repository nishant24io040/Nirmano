<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="center"
		android:id="@+id/page_root_view"
		android:orientation="vertical"
		android:background="@color/_bg___1_first_screen_color">

	<ImageView android:id="@+id/logo_nirmano_2"
			   android:layout_width="134dp"
			   android:layout_height="83dp"
			   android:src="@drawable/logo_nirmano_2"
			   android:contentDescription="logo_nirmano_2"/>

	<TextView
			android:id="@+id/nirmano"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginTop="8dp"
			android:text="@string/nirmano_string"
			android:textColor="@color/white"
			android:textSize="32sp"
			android:fontFamily="@font/poppins"
			android:textStyle="bold" />
</LinearLayout>